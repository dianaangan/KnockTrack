<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_design2"
    android:fillViewport="true"
    tools:context="view.LandingPageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Logo Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:layout_marginTop="235dp"
            android:layout_marginStart="-10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <!-- Logo Image -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="220dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_knocktrack_logo"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

        </LinearLayout>

        <!-- Description Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:padding="12dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="50dp">

            <!-- Main Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Connected, Stay Informed"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textAlignment="center" />

            <!-- Sub Description -->
            <TextView
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:text="Get instant notifications when someone rings your doorbell. Never miss a visitor again."
                android:textSize="13sp"
                android:textColor="#666666"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Get Started Button -->
        <Button
            android:id="@+id/getStartedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Get Started"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="80dp"
            android:elevation="2dp"
            android:padding="12dp"/>

        <!-- I Already Have Account Button -->
        <Button
            android:id="@+id/loginText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="I already have an account"
            android:textSize="15sp"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_outline"
            android:textColor="#0081C1"
            android:textAllCaps="false"
            android:clickable="true"
            android:focusable="true"
            android:elevation="1dp"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
