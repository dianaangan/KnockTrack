<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background_design1">

    <!-- Fixed Header at Top -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="@drawable/rounded_bottom_corners_white"
        android:paddingTop="50dp"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome, User"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:textSize="13sp"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:background="@drawable/rounded_button_logout"
            android:textColor="@color/colorPrimary"
            android:drawableStart="@drawable/ic_logout"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:minWidth="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- Scrollable Content (between header and nav) -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerLayout"
        android:layout_above="@+id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Doorbell Analytics Overview (Separate Container) -->
            <LinearLayout
                android:id="@+id/summaryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white_card"
                android:padding="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">
                
                <!-- Stats Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    
                    <!-- Total Notifications -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        
                        <TextView
                            android:id="@+id/tvTotalNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Time"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />
                    
                    <!-- Today's Notifications -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        
                        <TextView
                            android:id="@+id/tvTodayNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                    
                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp" />
                    
                    <!-- This Week -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        
                        <TextView
                            android:id="@+id/tvWeekNotifications"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#333333"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="This Week"
                            android:textColor="#666666"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Main Content Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_white_card"
                android:orientation="vertical"
                android:padding="24dp"
                android:elevation="8dp"
                android:layout_margin="20dp"
                android:clipToOutline="true">

                <!-- Doorbell Status Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/imgBell"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/ic_center_bell"
                        android:layout_gravity="center" />

                    <!-- Doorbell Status Text -->
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Doorbell Active"
                        android:textAlignment="center"
                        android:textColor="@color/green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />
                    
                    <!-- Connection Status -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Device: "
                            android:textColor="#666666"
                            android:textSize="14sp" />
                        
                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Not Connected"
                            android:textColor="#F44336"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Alert Banner (Hidden by default) -->
                <LinearLayout
                    android:id="@+id/notificationBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/alert_banner_bg"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:elevation="4dp">

                    <!-- Alert Icon with Animation -->
                    <ImageView
                        android:id="@+id/alertIcon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_alert_bell"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvNotificationTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸš¨ DOORBELL ALERT!"
                            android:textColor="#FF0000"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvNotificationSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Someone is at your door!"
                            android:textColor="#CC0000"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Dismiss Button -->
                    <Button
                        android:id="@+id/btnDismissAlert"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="Dismiss"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_button_red"
                        android:textColor="@android:color/white"
                        android:minWidth="60dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp" />
                </LinearLayout>

                <!-- Recent Activity Section -->
                <TextView
                    android:id="@+id/tvRecentActivityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Activity"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <!-- Not Connected Message -->
                <TextView
                    android:id="@+id/tvNotConnectedMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No recent activity view yet"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Empty State Message -->
                <TextView
                    android:id="@+id/tvNoRecentActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No notifications yet"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Recent Activity Items (Dynamic from Firebase) -->
                <LinearLayout
                    android:id="@+id/recentActivityContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <!-- Activity items will be added dynamically from Firebase data -->
                </LinearLayout>
            </LinearLayout>

            <!-- Extra padding at bottom to prevent content from being hidden behind nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_bottom_nav"
        android:orientation="horizontal"
        android:gravity="center"
        android:elevation="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <!-- Home Tab (Active) -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_home_nav" />
        </LinearLayout>

        <!-- History Tab -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_history_nav" />
        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_setting_nav" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>